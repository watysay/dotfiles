" $HOME/.vimrc settings
"
"--------------------------
" COLORS
"--------------------------

" enable syntax highlighting
syntax on

" enable 256 colors
set t_Co=256

" enable color scheme
colorscheme github


"--------------------------
" INDENTATION
"--------------------------

" enable smart indentation
set smartindent

" set tabulation to 4 'spaces'
set tabstop=4

" number of spaces in tab when editing
"set softtabstop=4

" tabs are spaces
"set expandtab

" complete tabstop to 4-length indent
set shiftwidth=4

" enable proper tab
set smarttab

"--------------------------
" MISC.
"--------------------------

" enable line numbers
set nu

